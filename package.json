{
  "name": "love-messenger",
  "version": "1.0.0",
  "description": "Send love messages to your dearly beloved via your favorite HTTP action",
  "main": "index.js",
  "scripts": {
    "start": "npm run dist && node dist.js",
    "dev": "nodemon --exec npm run babel-node -- index.js",
    "test": "mocha -r babel-core/register -C $(find . -name '*.spec.js') --growl",
    "test:watch": "npm test -- -w --reporter min",
    "babel-node": "babel-node --presets es2015",
    "dist": "browserify --node -t babelify --presets [ es2015 ] index.js -o dist.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gish/love-messenger.git"
  },
  "author": "Erik Hedberg <erik@hedberg.at>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gish/love-messenger/issues"
  },
  "homepage": "https://github.com/gish/love-messenger#readme",
  "devDependencies": {
    "expect": "^1.20.1",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4"
  },
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "body-parser": "^1.15.1",
    "browserify": "^13.0.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "moment": "^2.13.0",
    "sha1": "^1.1.1",
    "uglify-js": "^2.6.4"
  }
}
